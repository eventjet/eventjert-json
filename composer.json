{
    "name": "eventjet/json",
    "type": "library",
    "description": "Type-safe JSON encoding and decoding",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "eventjet/coding-standard": "^3.9",
        "infection/infection": "^0.26.6",
        "maglnet/composer-require-checker": "^3.8 || ^4.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^9.5.25",
        "psalm/plugin-phpunit": "^0.18.4",
        "vimeo/psalm": "^5.6"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Eventjet\\Json\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eventjet\\Test\\Unit\\Json\\": "tests/unit"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "check": [
            "@check-deps",
            "@cs-check",
            "@psalm",
            "@phpstan",
            "@phpunit",
            "@infection"
        ],
        "check-deps": "vendor/bin/composer-require-checker",
        "cs-check": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "infection": "vendor/bin/infection -jmax",
        "phpstan": "vendor/bin/phpstan",
        "phpunit": "vendor/bin/phpunit",
        "psalm": "vendor/bin/psalm"
    }
}
